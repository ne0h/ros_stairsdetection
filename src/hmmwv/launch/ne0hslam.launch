<launch>

	<!--
		ENGINECONTROL (STUFF)
	-->

	<node name="enginecontrol" pkg="hmmwv" type="enginecontrol" output="screen" />
	
	<!--
		LASER STUFF
	-->

	<node pkg="tf" type="static_transform_publisher" name="base_link_to_laser" args="0.1 0.1 0.15 0.0 0.0 0.0 /base_link /laser 50" />
	<node name="lms100" pkg="cob_sick_lms1xx" type="lms100">
		<param name="host" value="192.168.1.2" />
		<param name="frame_id" value="laser" />
		<param name="angle_resolution" value="0.5" />
		<param name="scan_frequency" value="25" />
	</node>

	<!--
		HECTOR STUFF
	-->

	<arg name="base_frame" default="base_link"/>
	<arg name="pub_map_odom_transform" default="true"/>
	<arg name="map_size" default="2048"/>
	<arg name="scan_subscriber_queue_size" default="5"/>
	<arg name="scan_topic" default="/lms100/scan"/>
	<arg name="tf_map_scanmatch_transform_frame_name" default="scanmatcher_frame"/>

	<node pkg="tf" type="static_transform_publisher" name="odom" args="0 0 0 0.0 0.0 0.0 /odom /base_link 50" />
	<node name="hector_mapping" pkg="hector_filetrain" type="hector_mapping" output="screen">
   
    	<param name="map_frame" value="map" />
    	<param name="base_frame" value="$(arg base_frame)" />
    
    	<param name="use_tf_scan_transformation" value="true"/>
		<param name="use_tf_pose_start_estimate" value="false"/>
    	<param name="pub_map_odom_transform" value="$(arg pub_map_odom_transform)"/>
    
		<param name="map_resolution" value="0.025"/>
    	<param name="map_size" value="$(arg map_size)"/>
    	<param name="map_start_x" value="0.5"/>
    	<param name="map_start_y" value="0.5" />
		<param name="map_multi_res_levels" value="2" />
    
    	<param name="update_factor_free" value="0.4"/>
    	<param name="update_factor_occupied" value="0.9" />    
    	<param name="map_update_distance_thresh" value="0.4"/>
    	<param name="map_update_angle_thresh" value="0.06" />
    	<param name="laser_z_min_value" value = "-1.0" />
    	<param name="laser_z_max_value" value = "1.0" />

    	<param name="advertise_map_service" value="true"/>
    
    	<param name="scan_subscriber_queue_size" value="$(arg scan_subscriber_queue_size)"/>
    	<param name="scan_topic" value="$(arg scan_topic)"/>
    
    	<param name="tf_map_scanmatch_transform_frame_name" value="$(arg tf_map_scanmatch_transform_frame_name)" />
	</node>

	<!--
		NAVIGATION STUFF
	-->

	<node name="move_base" pkg="move_base" type="move_base" output="screen">
		<param name="controller_frequency" value="5.0" />
		<rosparam file="$(find hmmwv)/conf/costmap_common_params.yaml" command="load" ns="global_costmap" />
		<rosparam file="$(find hmmwv)/conf/costmap_common_params.yaml" command="load" ns="local_costmap" />
		<rosparam file="$(find hmmwv)/conf/local_costmap_params.yaml" command="load" />
		<rosparam file="$(find hmmwv)/conf/global_costmap_params.yaml" command="load" />
		<rosparam file="$(find hmmwv)/conf/base_local_planner_params.yaml" command="load" />
	</node>

</launch>
